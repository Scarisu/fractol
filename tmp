A = Alpha+
Z = Alpha-
+ = imax+
- = imax-
c = couleur
v = nombre couleur
clear = invi


Fleches
Tab = reset (left_b)
return = mouse (a)
M = zoom+ (LR)
n = zoom- (LF)
esc = exit (b / right_b)

CP Thread

	while (pow(e->bu.z_r, 2) + pow(e->bu.z_i, 2) < 9
		&& e->bu.i < e->bu.imax)
	{
		tmp1 = pow(e->bu.z_r, 2);
		tmp2 = pow(e->bu.z_i, 2);
		e->bu.z_r = tmp1 * e->bu.z_r - 3 * e->bu.z_r * tmp2 + e->bu.c_r;
		e->bu.z_i = (3 * tmp1 * e->bu.z_i - tmp2 * e->bu.z_i) + e->bu.c_i;
		e->bu.i++;
	}
}
